<%- include ('../../partials/header.ejs')  %>
<%- include ('../../partials/homenavbar.ejs')  %>
<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h4><%= article.title %></h4>
                </div>
                <div class="card-body">
                    <a href='/<%= article.slug  %>' class="btn btn-success">Ler Artigo</a>
                </div>
            </div><br>
        <% }) %>
    <hr>
    <div class="row">
        <div class="col col-12">
            
            <% if(result.page > 2) {%>
                <a style="float: left" href="/articles/page/<%= result.page - 1 %>"> <<< Pagina Anterior</a>
            <% }else if(result.page == 2) { %>
                <a style="float: left" href="/">HOME</a>
            <% } %>    

            <% if(result.next) {%>
                <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Proxima Pagina >>></a>
            <% } %>    
        </div>
    </div>
    <hr>
    </div>
</body>
<%- include ('../../partials/footer.ejs') %>

